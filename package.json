{
    "name": "kammi",
    "version": "1.0.0",
    "description": "A minimalist writing refuge for creative professionals",
    "main": "main.js",
    "scripts": {
        "dev": "vite build && electron .",
        "dev:vite": "vite",
        "dev:electron": "NODE_ENV=development electron .",
        "build:renderer": "vite build",
        "build": "vite build && electron-builder",
        "build:mac": "vite build && electron-builder --mac",
        "build:win": "vite build && electron-builder --win",
        "start": "electron ."
    },
    "author": "Olli Laitinen",
    "license": "MIT",
    "build": {
        "appId": "app.kammi.writer",
        "productName": "Kammi",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "dist-renderer/**/*",
            "assets/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "assets/icon.png",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "icon": "assets/icon.png",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "devDependencies": {
        "electron": "^33.0.0",
        "electron-builder": "^25.1.8",
        "vite": "^7.3.0"
    },
    "dependencies": {
        "@tiptap/core": "^3.13.0",
        "@tiptap/extension-bubble-menu": "^3.13.0",
        "@tiptap/pm": "^3.13.0",
        "@tiptap/starter-kit": "^3.13.0"
    }
}
